<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @memo.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @memo.author %>
</p>

<p>
  <strong>Date:</strong>
  <%= @memo.date %>
</p>

<p>
  <strong>Content:</strong>
  <%= @memo.content %>
</p>





<p>
  <strong>Priority:</strong>
  <%= @memo.priority %>
</p>

<p>
  <strong>Tag:</strong>
  <%= @memo.tag.name %>
</p>

<p>
  <strong>Attachment:</strong>
 <%= link_to image_tag(@memo.image.url, class: 'media-object'), @memo.image.url, target: '_blank' %>
</p>

<p>
  <strong>Response:</strong>
  <% @memo.responses.each do |r| %>
  <br>
  User<%= r.user.id %> : <%= r.content %>
  <% end %>
</p>

<br>
<br>
<br>
<br>
<br>


<%= form_for @response do |f| %>

<div class="field">
  <strong> Your Response </strong><br>
  <%= f.text_field :content %>
</div>

<div class="field">
  <%= f.hidden_field :user_id, :value => current_user.id %>
</div>

<div class="field">
  <%= f.hidden_field :memo_id, :value => @memo.id %>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>



<br>
<br>
<br>
<br>


<%= link_to 'Edit', edit_memo_path(@memo) %> |
<% if @memo.priority == true %>
<%= link_to 'Back', priority_page_index_path %>
<% else  %>
<%= link_to 'Back', memos_path %>
<% end %>
