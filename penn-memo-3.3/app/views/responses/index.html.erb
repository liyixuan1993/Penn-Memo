<p id="notice"><%= notice %></p>

<h1>Responses</h1>
<div class="container">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Content</th>
      <th>User_id</th>
      <th>Memo_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @responses.each do |response| %>
      <tr>
        <td><%= response.content %></td>
        <td><%= response.user_id %></td>
        <td><%= response.memo_id %></td>
        <td><%= link_to 'Show', response %></td>
        <td><%= link_to 'Edit', edit_response_path(response) %></td>
        <td><%= link_to 'Destroy', response, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', memos_path, class:"btn btn-default" %>
</div>

<br>
