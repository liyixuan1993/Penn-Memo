
<div class="container">
<h1>Memos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th >Title</th>
      <th >Date</th>
      <th >Tag</th>
      <th >Priority</th>
      <th >Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memos.each do |memo| %>

      <tr>
        <td><%= memo.title %></td>
        <td><%= memo.date %></td>
        <td><%= memo.tag.name %></td>
        <td><%= memo.priority %></td>
        <td><%= memo.content %></td>
        <% if current_user.admin %>
        <td><%= link_to 'Destroy', memo, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-default btn-xs"%></td>
        <% end %>
      </tr>
    <% end %>


  </tbody>
</table>


<%= link_to 'Back to mainpage', memos_path, class:"btn btn-default" %>
</div>
