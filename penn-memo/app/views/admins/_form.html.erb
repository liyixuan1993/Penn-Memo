<%= form_for(admin) do |f| %>
  <% if admin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(admin.errors.count, "error") %> prohibited this admin from being saved:</h2>

      <ul>
      <% admin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div id="left">
</div>


<div id="middle">

  <div class="field">
    <%= f.label :Author %>
    <%= f.text_field :Author %>
  </div>

  <div class="field">
    <%= f.label :Title %>
    <%= f.text_field :Title %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date %>
  </div>

  <div class="field">
    <%= f.label :tag %>
    <%= f.text_field :tag %>
  </div>

  <div class="field">
    <%= f.label :Content %>
    <%= f.text_field :Content %>
  </div>

  <div class="field">
    <%= f.label :file %>
    <%= f.text_field :file %>
  </div>

  <br>

  <div class="action">
    <div><%= f.submit class:"btn btn-default"%></div>
    <br>
    <div><%= link_to 'Back', admins_path, class:"btn btn-default" %></div>
  </div>

</div>

<div id="right">
</div>

<% end %>


