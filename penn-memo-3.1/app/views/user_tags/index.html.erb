<p id="notice"><%= notice %></p>

<h1>User Tags</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_tags.each do |user_tag| %>
      <tr>
        <td><%= user_tag.tag.name %></td>
        <td><%= link_to 'Destroy', user_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

