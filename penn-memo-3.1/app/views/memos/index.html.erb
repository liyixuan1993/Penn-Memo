
<p id="notice"><%= notice %></p>

  <div class="row">

    <div class="col-xs-2">
      <div class="container">
        <br>
        <br>
        <br>
        <%= link_to "Add Tag", new_user_tag_path, class:"btn btn-success btn-xs" %> <%= link_to "Delete Tag", user_tags_path, class:"btn btn-danger btn-xs" %>
        <br>
        <h3>Tag list</h3>
