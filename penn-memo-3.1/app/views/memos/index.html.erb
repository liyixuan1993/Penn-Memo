      </div>
    </div>

<div class="container">
    <div class="col-xs-10">
      <div class="container">
        <h1>Priority</h1>

        <% if Memo.where(:priority => true).count > 0 %>
        <p> you have <%= Memo.where(:priority => true).count %> priority memos </p>
        <br>


          <div class="container">
        <table class="table table-condensed">
          <thead>
            <tr>
              <th >Title</th>
              <th >Date</th>
              <th >Content</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @memos.each do |memo| %>
            <% if memo.priority == true%>
              <tr>
                <td><%= memo.title %></td>
                <td><%= memo.date %></td>
                <td><%= memo.content %></td>
                <td><%= link_to 'Show', memo %></td>
                <% if current_user.admin %>
                <td><%= link_to 'Edit', edit_memo_path(memo) %></td>
                <td><%= link_to 'Destroy', memo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                 <% end %>
              </tr>
            <% end %>
            <% end %>

          </tbody>
        </table>
        <% end %>
        </div>







        <h1>Memos</h1>
        <div class="container">
          <table class="table table-condensed">
          <thead>
            <tr>
              <th >Title</th>
              <th >Date</th>
              <th >Content</th>
              <th colspan="3"></th>
            </tr>
          </thead>

