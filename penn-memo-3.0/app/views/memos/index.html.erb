<p id="notice"><%= notice %></p>

<h1>Penn Memo</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>Date</th>
      <th>Category</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memos.each do |memo| %>
      <tr>
        <td><%= memo.title %></td>
        <td><%= memo.author %></td>
        <td><%= memo.date %></td>
        <td><%= memo.category_name %></td>
        <td><%= memo.content %></td>
        <td><%= memo.priority %></td>
        <td><%= link_to 'Show', memo %></td>
        <td><%= link_to 'Edit', edit_memo_path(memo) %></td>
        <td><%= link_to 'Destroy', memo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Memo', new_memo_path %>
