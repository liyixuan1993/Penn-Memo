<div class="container" style="width:60%">
<p id="notice"><%= notice %></p>

<h1>Delete tags</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% current_user.user_tags.each do |user_tag| %>
    <% if user_tag.tag != nil %>
      <tr>
        <td><%= user_tag.tag.name %></td>
        <td><%= link_to 'Delete', user_tag, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default btn-sm"%></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', memos_path, class:"btn btn-default" %>

</div>
