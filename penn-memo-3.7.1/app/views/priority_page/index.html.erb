
<div class="container" >
<div class="container" >
<h1>Priority Memos</h1>
</div>

<% if current_user.user_tags.map(&:tag_id) & Memo.all.map(&:tag_id) != [] %>

<div class="container" style="height:400px;overflow-y:auto">
  <div >
<% @memos.each do |memo| %>
 <% if memo.priority == true%>
 <% if current_user.user_tags.map(&:tag_id).include?(memo.tag.id) %>
 <%= link_to memo do %>
 <button class="btn btn-default btn-lg " type="submit" style="width:100%">
      <p style="text-align:left; overflow-x:hidden;width:210px"><strong>From:&nbsp;</strong><%= memo.author %></p>
      <p style="word-break:break-all; width:100%; overflow-x:hidden; height:20px; overflow-y:auto"><%= memo.content %></p>
      <div class="row">
        <div class="col-xs-6">
          <p style="text-align:left"><strong>#<%= memo.tag.name %></strong></p>
        </div>
        <div class="col-xs-6">
          <p style="text-align:right"><%= memo.date %></p>
        </div>
      </div>
</button>
    <br>
    <% end %>
<br>
   <% end %>
   <% end %>
   <% end %>
 </div>

</div>

<% end %>
<div class="container">
 <%= link_to 'Back to mainpage', memos_path, class:"btn btn-default" %>
 </div>
</div>
