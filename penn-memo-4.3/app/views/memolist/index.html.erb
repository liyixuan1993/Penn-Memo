
<div class="container" style="width:100%;">
<h1>Memos</h1>

<div style="height:400px; overflow-y:auto">
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th >Date</th>
      <th >Tag</th>
      <th >Priority</th>
      <th >Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody >
    <% @memos.each do |memo| %>

      <tr>
        <td><%= memo.id %></td>
        <td ><p style="word-break:break-all; width:100px;  height:20px; overflow-y:hidden"><%= memo.title %></p></td>
        <td><%= memo.date %></td>
        <td><%= memo.tag.name %></td>
        <td><%= memo.priority %></td>
        <td><p style="word-break:break-all; width:100px;  height:20px; overflow-y:hidden"><%= memo.content %></p></td>
        <% if current_user.admin %>
        <td><%= link_to 'Destroy', memo, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-default btn-xs"%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
<br>

<%= link_to 'Back to mainpage', memos_path, class:"btn btn-default" %>
</div>
